{
  "compilerOptions": {
    "target": "ES2020",
    "strict": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "",
    "sourceMap": true,
    "removeComments": true,
    "declaration": false,
    "moduleResolution": "node",
    "typeRoots": [
      "node_modules/@types"
    ],
    "noUnusedLocals": true,
    "resolveJsonModule": true
  },
  "include": [
    "./src/**/*.ts",
    "./scripts/**/*.ts"
  ],
  "exclude": [
    "./node_modules",
    "./src/**/*.test.ts",
  ]
}
